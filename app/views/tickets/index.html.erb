<br /> 
<h3>Listing tickets</h3>
<% if current_user.is_admin? %>
<table class="tablesorter">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Owner</th>
    <th>Assigned to Department</th>
    <th>Status</th>
    <th colspan="3"> Actions</th>
    <!--<th></th>
    <th></th> -->
  </tr>
  </thead>
  <tbody>
<% @tickets.each do |ticket| %>
  <tr>
    <td><%= ticket.title %></td>
    <td><%= ticket.description %></td>
    <td><%= ticket.owner.firstname %></td>
    <td><%= ticket.department.name %></td>
    <td><%= ticket.status %></td>
    <td><%= link_to 'Show', ticket %></td>
    <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
    <td><%= button_to('Destroy', ticket, :confirm => 'Are you sure?', :method => :delete) %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br />
<%else%>
<%= render :partial=>"tickets/mytickets",:locals=>{:tickets=>@tickets_created,:title=>"Created Tickets", :access => "Y"} %>
<%= render :partial=>"tickets/mytickets",:locals=>{:tickets=>@tickets_assigned,:title=>"Assigned Tickets", :access => "N"} %>
<%end%>
<%= link_to 'New Ticket', new_ticket_path %>
