

<p>
  <b>Title:</b>
  <%= @ticket.title %>
</p>

<p>
  <b>Description:</b>
  <%= @ticket.description %>
</p>

<p>
  <b>Owners:</b>
  <%= @ticket.owner.firstname %>
</p>

<p>
  <b>Assigned to Department:</b>
  <%= @ticket.department.name %>
</p>


<p>
  <b>Status:</b>
  <%= @ticket.print_status %>
</p>


<% unless @ticket.not_assigned? %>
<div class="assign_to_cover">
  <b> Assigned to : </b>
  <%= @ticket.assigned.full_name %>
</div>
<% end %>

<% case current_user.id %>
<% when (@ticket.head_of_department).id %>
  <%= render :partial=>'tickets/head_ticket_show' %>
<% when @ticket.owner_id %>
  <%= render :partial=>'tickets/owner_ticket_show' %>
<% when @ticket.assigned_to %>
  <%= render :partial=>'tickets/engg_ticket_show' %>
<% end %>


<h3>Comments</h3>
<div id="commentslist">

  <%=render :partial => "comment"%>

</div>
<div id="comment_form"></div>
<div id="new_comment">
  <h3>Add your comment</h3>

  <%=render :partial => "comment_form"%>
</div>



<p>
  Log Trail:
<table>
  <% @audits.each do |a| %>
    <tr>
      <td><%= a.comment %></td>
    </tr>
  <%end%>
</table>
</p>
<%= link_to 'Edit', edit_ticket_path(@ticket) %> |
<%= link_to 'Back', tickets_path %>
