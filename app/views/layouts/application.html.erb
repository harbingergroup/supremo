<!DOCTYPE html>
<html>
	<head>
		<title>Supremo *</title>
		<%= stylesheet_link_tag :all %>
		<%= javascript_include_tag 'jquery','rails','jquery.tablesorter.min','jquery-ui-1.8.12.custom.min','application' %>
		<%#= javascript_include_tag :defaults %>
		<%= stylesheet_link_tag "css/blueprint/screen.css", :media=>"screen, projection" %>
		<%= stylesheet_link_tag "css/blueprint/print.css", :media=>"print" %>

		<%= csrf_meta_tag %>
	</head>
	<body class=<%= controller.action_name%> >

  <%- if notice %>
		<div id="notice" class="hidden all_notice">
			<%= notice %>
		</div>
		<% end %>
		<div class="j_notice hidden all_notice">
		</div>
		<%- if alert %>
		<div id="alert" class="hidden all_notice">
			<%= alert %>
		</div>
		<%- end %>
		<div class="j_alert hidden all_notice">
		</div>
		<div class="container">
			<!--container begins (remove showgrid)-->
			<%= image_tag("header.jpg") %>
			<div class="span-24">
				<!--Banner -->				
				<div style="float: right">
					<h4 class="large"><%= render :partial=>'welcome/menu'%></h4>
				</div>
				<br/>
				<br/>
				<br/>
			</div>
			<div class="span-3 append-3">
				<!--Left column -->
			</div>
			<div class="span-25 append-3">
				<p>
					<!--middle column (upper) -->
				</p>
				
				<%if(current_user)%>
				<div class="span-6 append-1">
					&nbsp;
					
					<!--middle column (left) -->
						<%= render :partial=>"users/quick_links"%>
					
				</div>
				<%end%>
				
				<div class="span-14 last">
					<!--middle column (right) -->
					<div class="clear">
					</div>
					<div class="large loud">
						<%= yield %>
					</div>
				</div>
			</div>
			<div class="span-4 append-3">
				<!--first right column  -->
			</div>
			<div class="span-4 last">
				<!--second right column -->
			</div>
			<div class="span-4">
				<!--footer content goes here -->
			</div>
		</div><!--container ends-->
	</body>
</html>
