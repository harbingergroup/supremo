<%- unless @mydepts.empty?%>
<h5>Departments you manage</h5>
<div class="mydepartments">
  <ul>
  <%- @mydepts.each do |m| %>
    <li><%= link_to m.name,department_path(m) %></li>
  <%- end %>
  </ul>
</div>
<hr/>
<h5>Tickets to assign </h5>
<div class="tickts_to_assign">
  <ul>
  <%- @ticketsta.each do |t| %>
    <li id="ta_<%= t.id %>">
      <div>
          <%= link_to t.title,ticket_path(t) %>
          <%= link_to 'Assign to',users_department_url(t.department_id),:remote=>true %>
        <span id="ticket_person_id_<%=t.id%>"></span>
      </div>
      <div>
        <%= truncate(t.description,:length=>50,:omission => '...') %>
      </div>
      <div> &nbsp; </div>
    </li>
  <%- end %>
  </ul>
</div>

<% end %>