<%= form_for @user, :url => {:action=> 'save_uploaded_image', :controller=> 'users'}, :html => { :multipart => true } do |f| %>
<% if @user.image == nil%>
<% @user.build_image %>
<%end%>
<% if @user.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@user.errors.count, "Error") %> prohibited this user from being saved:</h2>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="field">
	<%= f.fields_for(:image) do |b| %>
	<%= b.label :photo , "Profile picture "%>
	<%= b.file_field :photo %>
	<%end%>
</div>
<div class="actions">
	<%= f.submit %>
</div>
<% end %>

